@{
    ViewData["Title"] = "Lista de Tarefas";
}

<div class=text-center>
    <h1 ="display-2"> Cadastrar Tarefa</h1>

</div>

<form>
    <div class="form-group">
        <label for="Título">Título</label>
        <input type="text" class="form-control" placeholder="Insira um título">
    </div>
    <div class="form-group">
        <label for="Vencimento">Vencimento</label>
        <input type="date" class="form-control" placeholder="Insira a data de vencimento da sua tarefa">
    </div>
    <div class="form-group">
        <label for="Descrição">Descrição</label>
        <input type="text" class="form-control" placeholder="Insira a descrição da sua tarefa">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller ="Gerenciador" asp-action ="Index" role="button">Voltar</a>
</form>

